{
  "swagger": "2.0",
  "info": {
    "title": "data-management-service",
    "description": "Microservice to handle data for shopping list app"
  },
  "host": "localhost",
  "schemes": [ "http", "https"],
  "consumes": [ "application/json" ],
  "produces": [ "application/json" ],

  "paths": {
    "/api/v1/healthcheck": {
      "get": {
        "summary": "Check if service is up and running"
      }
    },
    "api/v1/piles/:pile_id/wishes": {
      "get": {
        "summary": "Returns validation documents requests"
      },
      "post": {
        "summary": "Adds a wish to pile"
      },
      "patch": {
        "summary": "Update status, description or amount of given wishes"
      }
    }
  },

  "definitions": {
    "WishesModel": {
      "type": "object",
      "required": [
        "wishes"
      ],
      "properties": {
        "wishes": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "wish": {
                "$ref": "WishModel"
              }
            },
            "additionalProperties": true
          }
        },
        "additionalProperties": false
      }
    },

    "WishModel": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string",
          "maxLength": 50
        },
        "amount": {
          "type": "number"
        },
        "statuses": {
          "type": "array",
          "items": { "type": "string" }
        },
        "id": { "type": "number" }
      },
      "additionalProperties": false
    }
  }
}

